---
layout: null
permalink: /api/projects.json
---
[
{% assign items = site.projects | sort: 'date' | reverse %}
{% for p in items %}
  {
    "id": {{ forloop.index }},
    "title": {{ p.title | jsonify }},
    "description": {{ p.description | jsonify }},
    "image": {{ p.image | jsonify }},
    "tech_stack": {{ p.tech_stack | jsonify }},
    "link": {{ p.link | jsonify }},
    "github": {{ p.github | jsonify }},
    "category": {{ p.category | jsonify }},
    "date": {{ p.date | date: "%Y-%m-%d" | jsonify }},
    "featured": {{ p.featured | default: false | jsonify }},
    "status": {{ p.status | jsonify }},
    "i18n_key": {{ p.i18n_key | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]
